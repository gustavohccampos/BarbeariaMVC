@model IEnumerable<ClienteModel>


   <div class="py-5">

       <div class="container">

           <div class="text-center mb-5">
               <a class="btn btn-primary" asp-action="Cadastrar" asp-controller="Cliente">Cadastrar Cliente!</a>
           </div>

        <div class="text-center mb-5">
            <form method="get" asp-action="Index" asp-controller="Cliente" class="d-flex justify-content-center">
                <input  name="pesquisar" class="form-control w-50 mx-2" style="border:1px solid black;" />
                <button type="submit" class="btn btn-primary w-10">Pesquisar</button>
            </form>
        </div>

           <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-0">
            @if (Model != null)
            {
                @if (Model.Count() > 0)
                {  

                    <table class="table table-striped table-hover">
                    <thead class="thead-dark text-center">
                        <tr>
                           <th class="d-none d-md-table-cell">#</th>
                            <th class="d-none d-md-table-cell">ID</th>
                            <th>Nome</th>
                            <th >Email</th>
                            <th>Telefone</th>
                            <th colspan="2">Opções</th>
                        </tr>
                    </thead>
                    <tbody>
               
                    @foreach (var cliente in Model)
                    {
                                <tr class="text-center align-middle" style="cursor: pointer;">
                                    <td>
                                    @if (cliente.Foto != null)
                                    {
                                            <img src="imagem/@cliente.Foto" style="width:55px;height:55px"  />
                                        }
                                        else
                                        {
                                            <img src="..." />
                                        }
                                    </td>
                                    <td>@cliente.ClienteId</td>
                                    <td>@cliente.Nome</td>
                                    <td>@cliente.Email</td>
                                    <td class="d-none d-md-table-cell">@cliente.Telefone</td>
                                    <td>
                                        <a class="btn btn-warning btn-sm"
                                        asp-action="Editar" asp-controller="Cliente" asp-route-id="@cliente.ClienteId">
                                            <i class="fa fa-trash"> Editar</i>
                                        </a>
                                    </td>
                                    <td>
                                        <a class="btn btn-danger btn-sm"
                                           asp-action="Remover" asp-controller="Cliente" asp-route-id="@cliente.ClienteId">
                                            <i class="fa fa-trash"> Excluir</i>
                                        </a>
                                    </td>
                                </tr>
                    }
                        </tbody>
              
                    </table>

            }
                else
                {
                    <tfoot>
                        <tr>
                            <td colspan="8" class="text-center">
                                <h4>Nenhum evento encontrado!</h4>
                            </td>
                        </tr>
                    </tfoot>
                }
            }

           </div>

       </div>

   </div>


