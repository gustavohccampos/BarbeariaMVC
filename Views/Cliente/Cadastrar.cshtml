@using BarbeariaMVC.Dto;
@model ClienteDto;

<div class="container mt-5">
       <form method="post" asp-action="Cadastrar" asp-controller="Cliente" enctype="multipart/form-data">

           <h3>Cadastro de Cliente</h3>

        <div class="row">
            <div class="col-md-4 text-center">
                <!-- Ajuste aqui para a largura da coluna -->
                <label for="ImageFile">
                    <img id="img" style="width:170px; height:210px" />
                </label>
                <div class="mb-2 mt-3">
                    <label class="form-label">Foto</label>
                    <input type="file" id="ImageFile" name="foto" class="form-control shadow-none" />
                </div>
            </div>

            <div class="col-md-8">
                <!-- Ajuste aqui para a largura da coluna -->
                <div class="mb-1">
                    <label class="form-label">Nome</label>
                    <input type="text" asp-for="Nome" class="form-control shadow-none" />
                    <span class="text-danger" asp-validation-for="Nome"></span>
                </div>

                <div class="mb-1">
                    <label class="form-label">Email</label>
                    <input type="text" asp-for="Email" class="form-control shadow-none" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>

                <div class="mb-1">
                    <label class="form-label">Telefone</label>
                    <input type="text" asp-for="Telefone" class="form-control shadow-none" />
                    <span class="text-danger" asp-validation-for="Telefone"></span>
                </div>
            </div>
        </div>

        <div class="btn-box d-flex mt-3">
      
            <a type="submit" class="btn btn-info w-50" asp-controller="Cliente" asp-action="Index">
                <i class="bi bi-arrow-left-circle"></i> 
                Voltar
            </a>

            <button type="submit" type="button" class="btn btn-success w-50 mx-1">
                <i class="bi bi-plus-circle"></i>
                Cadastrar!
            </button>
        </div>



       </form>

</div>





<script>


    const inputFile = document.querySelector("#ImageFile");
    inputFile.addEventListener("change", function (e) {
        const inputTarget = e.target;
        const file = inputTarget.files[0];
        if (file) {
            const reader = new FileReader();
            reader.addEventListener("load", function (e) {
                const readerTarget = e.target;
                const img = document.querySelector("#img");
                img.src = readerTarget.result;

                const figcaption = document.querySelector("#figcaption");
                figcaption.innerHTML = file.name;
            });
            reader.readAsDataURL(file);
        }
    }

    )
</script>